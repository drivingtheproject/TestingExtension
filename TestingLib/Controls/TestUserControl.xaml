<UserControl
	x:Class="TestingLib.Controls.TestUserControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:TestingLib.Controls"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="300"
	d:DesignWidth="400"
	mc:Ignorable="d">

	<Grid>
		<TextBlock
			Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsTextSelectionEnabled="True"
			Text="{x:Bind LogMessage, Mode=OneWay}" />
	</Grid>
</UserControl>
